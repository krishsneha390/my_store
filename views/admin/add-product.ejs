<%- include('../partials/header') %>

<h2 style="text-align:center;margin-bottom:20px;">Add Product</h2>

<form action="/admin/add-product" method="POST" enctype="multipart/form-data" 
      style="width:400px;margin:auto;display:flex;flex-direction:column;gap:10px;">

    <label>Product Name</label>
    <input type="text" name="name" required>

    <label>Price (Rs)</label>
    <input type="number" name="price" required>

    <label>Category</label>
    <select name="category_id" required>
        <% categories.forEach(c => { %>
            <option value="<%= c.id %>"><%= c.name %></option>
        <% }) %>
    </select>

    <label>Upload Image</label>
    <input type="file" name="image" accept="image/*" required>

    <label>Description</label>
    <textarea name="description" rows="3"></textarea>

    <button type="submit" style="padding:10px;background:#0d6efd;color:white;border:none;cursor:pointer;">
        Add Product
    </button>
</form>

<%- include('../partials/footer') %>
