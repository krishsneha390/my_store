<%- include('../partials/header') %>

<h2>Product List</h2>

<table border="1" width="100%" cellpadding="10">
<tr>
    <th>ID</th><th>Name</th><th>Price</th><th>Image</th><th>Actions</th>
</tr>

<% products.forEach(p => { %>
<tr>
    <td><%= p.id %></td>
    <td><%= p.name %></td>
    <td>Rs <%= p.price %></td>
    <td>
    <% if(p.image) { %>
        <img src="<%= p.image.startsWith('/uploads') ? p.image : '/uploads/' + p.image %>" width="70" style="border-radius:5px;">
    <% } else { %>
        No Image
    <% } %>
</td>

    <td><a href="/product/<%= p.id %>">View</a></td>
</tr>
<% }) %>
</table>

<%- include('../partials/footer') %>
