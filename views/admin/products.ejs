<%- include('../partials/header') %>

<h2>Product List</h2>

<table border="1" width="100%" cellpadding="10">
<tr>
    <th>ID</th><th>Name</th><th>Price</th><th>Image</th><th>Actions</th>
</tr>

<% products.forEach(p => { %>
<tr>
    <td><%= p.id %></td>
    <td><%= p.name %></td>
    <td>Rs <%= p.price %></td>
    <td><img src="<%= p.image %>" width="70"></td>
    <td><a href="/product/<%= p.id %>">View</a></td>
</tr>
<% }) %>
</table>

<%- include('../partials/footer') %>
