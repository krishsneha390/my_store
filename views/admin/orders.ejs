<%- include('../partials/header') %>

<h2 style="text-align:center;margin:30px 0;">Orders</h2>

<table border="1" width="90%" style="margin:auto" cellpadding="10">
<tr>
    <th>ID</th>
    <th>Name</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Total</th>
    <th>Items</th>
    <th>Date</th>
</tr>

<% orders.forEach(o => { %>
<tr>
    <td><%= o.id %></td>
    <td><%= o.customer_name %></td>
    <td><%= o.phone %></td>
    <td><%= o.address %></td>
    <td>Rs <%= o.total %></td>
    <td><%= JSON.parse(o.items).length %> items</td>
    <td><%= o.created_at.toDateString() %></td>
</tr>
<% }) %>
</table>

<%- include('../partials/footer') %>
