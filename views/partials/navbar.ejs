<nav style="padding: 15px; background: #fff; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #ddd;">
  
  <a href="/" style="font-size: 24px; font-weight: bold; color: black; text-decoration: none;">
    MyStore
  </a>

  <ul style="list-style: none; display: flex; gap: 20px; align-items: center; margin: 0;">
    <li><a href="/" style="text-decoration: none; color: black;">Shop</a></li>
    <li><a href="/cart" style="text-decoration: none; color: black;">Cart</a></li>

    <% if (session.user) { %>
      <!-- If user is logged in -->
      <li>
        <a href="/account" style="text-decoration: none; color: green; font-weight: bold;">
          Hi, <%= session.user.name %>!
        </a>
      </li>
      <li>
        <a href="/logout" style="text-decoration: none; color: red;">Logout</a>
      </li>
    <% } else { %>
      <!-- If user is NOT logged in -->
      <li><a href="/login" style="text-decoration: none; color: black;">Login</a></li>
      <li><a href="/signup" style="text-decoration: none; color: black;">Signup</a></li>
    <% } %>
  </ul>

</nav>
