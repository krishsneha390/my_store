<%- include('../partials/header') %>

<h2 style="text-align:center;margin:30px 0;">Checkout</h2>

<div style="max-width:500px;margin:auto;padding:20px;">
    
    <form action="/checkout" method="POST">

        <label>Name</label>
        <input type="text" name="customer_name" required style="width:100%;padding:8px;margin:5px 0;">

        <label>Phone</label>
        <input type="text" name="customer_phone" required style="width:100%;padding:8px;margin:5px 0;">

        <label>Address</label>
        <textarea name="customer_address" required style="width:100%;padding:8px;margin:5px 0;"></textarea>

        <h3>Total: Rs <%= total %></h3>

        <button style="background:green;color:white;padding:10px 18px;border:none;border-radius:5px;margin-top:10px;cursor:pointer;">
            Confirm Order
        </button>
    </form>

</div>

<%- include('../partials/footer') %>
