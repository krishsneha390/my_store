<%- include('../partials/header') %>

<h2 class="section-title" style="text-align:left;">Checkout</h2>

<div class="form-card" style="max-width:480px;margin:auto;">

  <form action="/checkout" method="POST">
      <label>Full Name</label>
      <input type="text" name="name" required>

      <label>Phone Number</label>
      <input type="text" name="phone" required>

      <label>Delivery Address</label>
      <textarea name="address" required rows="3"></textarea>

      <h3 style="margin-top:12px;">Total: Rs <%= total %></h3>

      <button type="submit" class="btn btn-primary" style="width:100%;margin-top:10px;">
          Place Order (Cash on Delivery)
      </button>
  </form>

  <form action="/pay-esewa" method="POST" style="margin-top:10px;">
      <input type="hidden" name="amount" value="<%= total %>">
      <button type="submit" class="btn" style="width:100%;background:#10b981;color:#fff;">
          Pay with eSewa
      </button>
  </form>

</div>

<%- include('../partials/footer') %>
