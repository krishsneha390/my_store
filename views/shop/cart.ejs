<%- include('../partials/header') %>

<h2>ðŸ›’ Your Cart</h2>

<% if (cart.length === 0) { %>
  <p>No items in cart.</p>
  <a href="/" class="btn btn-primary">Shop Now</a>
<% } else { %>

<table class="table table-bordered mt-3">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Qty</th>
    <th>Price</th>
    <th>Total</th>
    <th>Action</th>
  </tr>

  <% cart.forEach(item => { %>
  <tr>
    <td>
      <% if (item.image) { %>
        <img src="/uploads/<%= item.image %>" width="60">
      <% } %>
    </td>
    <td><%= item.name %></td>
    <td><%= item.qty %></td>
    <td>Rs. <%= item.price %></td>
    <td>Rs. <%= item.price * item.qty %></td>
    <td>
      <a href="/cart/remove/<%= item.id %>" class="btn btn-danger btn-sm">Remove</a>
    </td>
  </tr>
  <% }) %>
</table>

<h3>Total: Rs. <%= total %></h3>

<a href="/checkout" class="btn btn-success btn-lg mt-3">Proceed to Checkout</a>

<% } %>

<%- include('../partials/footer') %>
