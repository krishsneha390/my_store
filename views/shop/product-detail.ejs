<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row">
    <!-- Image -->
    <div class="col-md-4">
      <% if (product.image) { %>
        <img src="/uploads/<%= product.image %>" class="img-fluid border rounded">
      <% } else { %>
        <p>No image available</p>
      <% } %>
    </div>

    <!-- Info -->
    <div class="col-md-8">
      <h2><%= product.name %></h2>

      <% if (product.brand) { %>
        <h5 class="text-muted">Brand: <%= product.brand %></h5>
      <% } %>

      <h3 class="text-danger mt-2">Rs. <%= product.price %></h3>

      <% if (product.short_description) { %>
        <p class="mt-3"><%= product.short_description %></p>
      <% } %>

      <hr>

      <% if (product.long_description) { %>
        <p><%= product.long_description %></p>
      <% } %>

      <a href="/add-to-cart/<%= product.id %>" class="btn btn-success btn-lg mt-3">
        ðŸ›’ Add to Cart
      </a>

      <a href="/" class="btn btn-secondary btn-lg mt-3 ms-2">
        ðŸ”™ Continue Shopping
      </a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
