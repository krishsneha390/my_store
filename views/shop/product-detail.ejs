<%- include('../partials/header') %>
<%- include("partials/navbar") %>


<div style="max-width:1000px;margin:auto;padding:40px;display:flex;gap:50px;flex-wrap:wrap;">

    <!-- Product Image -->
    <div style="flex:1;min-width:300px;text-align:center;">
        <% if (product.image) { %>
    <img src="<%= product.image && (product.image.startsWith('http') || product.image.startsWith('https')) 
    ? product.image 
    : '/uploads/' + product.image %>"
     alt="<%= product.name %>"
     style="width:100%;max-width:350px;border-radius:12px;">

<% } else { %>
    <span>No Image Available</span>
<% } %>

    </div>

    <!-- Info Section -->
    <div style="flex:1;min-width:300px;">

        <h2 style="font-size:28px;font-weight:700;margin-bottom:10px;">
            <%= product.name %>
        </h2>

        <p style="font-size:22px;font-weight:bold;color:#007bff;margin-bottom:15px;">
            Rs <%= product.price %>
        </p>

        <p style="font-size:16px;color:#444;line-height:1.5;margin-bottom:25px;">
            <%= product.description || "No description available." %>
        </p>

        <form action="/add-to-cart/<%= product.id %>" method="POST">
            <button style="background:#007bff;color:white;padding:12px 24px;font-size:17px;
                           border:none;border-radius:6px;cursor:pointer;">
                üõí Add to Cart
            </button>
        </form>

        <a href="/" style="display:inline-block;margin-top:15px;padding:10px 20px;border:2px solid #333;
                           border-radius:6px;color:#333;text-decoration:none;font-size:17px;">
            ‚Üê Back to Shop
        </a>
    </div>
</div>

<%- include('../partials/footer') %>
